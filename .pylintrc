[MASTER]
ignore=migrations, settings.py, venv, node_modules, __pycache__
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-member,
    no-self-use,
    line-too-long

[REPORTS]
fail-under=8.0

[FORMAT]
max-line-length=100
indent-string='    '

[TYPECHECK]
ignored-modules=django
ignored-classes=QuerySet,Manager
